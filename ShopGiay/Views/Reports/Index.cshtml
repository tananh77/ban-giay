@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<ShopGiay.Models.Order>

<div class="pagetitle">
    <h1>Revenue</h1>
</div>

<div class="col-lg-12">
    <div class="row">

        <!-- Sales Card -->
        <div class="col-xxl-4 col-md-6">
            <div class="card info-card sales-card">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-cart"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.totalItemsSold<span> orders</span></h6>
                            <span class="text-muted small pt-2 ps-1">Number of orders sold</span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Sales Card -->
        <!-- Revenue Card -->
        <div class="col-xxl-4 col-md-6">
            <div class="card info-card revenue-card">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.TotalRevenue<span>$</span></h6>
                            <span class="text-muted small pt-2 ps-1">Total revenue generated</span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Revenue Card -->

        <div class="col-12">
            <div class="card info-card sales-card">
                <div class="card-body">
                    <h5 class="card-title">Order Details</h5>
                    @*<input type="button" value="Delete Order" class="btn btn-outline-primary" /><br /><br />*@
                    <table class="table table-striped">
                        <tr>
                            <th>Order ID</th>
                            <th>Product ID</th>
                            <th>Customer Name</th>
                            <th>Product Price</th>
                            <th>Purchase Date</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.ProductId</td>
                                <td>@item.UserId</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.Time</td>
                                <td>
                                    @using (Html.BeginForm("DeleteOrder", "Reports", new { orderId = item.OrderId }, FormMethod.Post))
                                    {
                                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?')" />
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
