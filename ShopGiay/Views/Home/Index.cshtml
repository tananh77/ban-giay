@model List<ShopGiay.Models.Product>

<div class="container">
    <!-- Banner Image Slider -->
    <div id="banner-slider" class="carousel slide mb-4" data-ride="carousel">
        <div class="carousel-inner">
            <!-- Thêm ảnh vào slider -->
            <div class="carousel-item active">
                <img src="https://th.bing.com/th/id/R.2e1ad2301ffeecaa6758fc67ed190f52?rik=HeY0YBca%2fixQEg&riu=http%3a%2f%2fi1252.photobucket.com%2falbums%2fhh579%2fShopburin%2fbanner01_zpsddaf983d.jpg&ehk=E%2bncbZAFLR7UZlLiTDHJw3fXvuwUbCD%2bkBUCMUyVWbs%3d&risl=&pid=ImgRaw&r=0" style="max-height: 300px;" class="d-block w-100" alt="Banner Image 1">
            </div>
            <div class="carousel-item">
                <img src="https://www.geezersboxing.co.uk/media/revslider/home_slider/Nike-Boxing.jpg" style="max-height: 300px;" class="d-block w-100" alt="Banner Image 2">
            </div>
            <div class="carousel-item">
                <img src="https://s.isanook.com/ca/0/ud/189/946483/r_37491.jpg" style="max-height: 300px;" class="d-block w-100" alt="Banner Image 2">
            </div>
            <div class="carousel-item">
                <img src="https://th.bing.com/th/id/R.259428ae7c5faf9346fc925f062b3e65?rik=g6jDvqPmfM4drQ&riu=http%3a%2f%2fwww.spl.com.pk%2fwp%2fwp-content%2fuploads%2f2016%2f10%2f3-768x254.jpg&ehk=bx2%2bNYmvlpbIavtNS03L%2bhJDUfghSFb1VRT2AZVw8wE%3d&risl=&pid=ImgRaw&r=0" style="max-height: 300px;" class="d-block w-100" alt="Banner Image 2">
            </div>
            <!-- Thêm nhiều ảnh khác nếu cần -->
        </div>
        <!-- Nút chuyển đổi giữa các ảnh -->
        <a class="carousel-control-prev" href="#banner-slider" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#banner-slider" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Product Filter -->
    <div class="mb-4">
        <h4>Filter:</h4>
        <!-- Add your filter elements here -->
        <!-- For example, a dropdown for categories -->
        <select class="form-control">
            <option value="">All Categories</option>
            <option value="category1">Category 1</option>
            <option value="category2">Category 2</option>
            <!-- Add more options as needed -->
        </select>
        <!-- You can add more filter elements based on your requirements -->
    </div>

    <h2>Home</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("ProductDetails", "Product", new { productId = product.ProductId })" class="card-link">
                    <div class="card h-100">
                        <img src="~/Public/image/@product.Image" class="card-img-top" alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price: $@product.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Kích thước thời gian trôi qua giữa các ảnh (3 giây)
            var interval = 8000;

            // Chọn slider và khởi tạo
            $('#banner-slider').carousel();

            // Tự động chuyển đổi ảnh sau mỗi khoảng thời gian
            setInterval(function () {
                $('#banner-slider').carousel('next');
            }, interval);
        });
    </script>
}
