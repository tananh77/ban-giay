@model ShopGiay.Models.Account

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Create Account</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <table class="table table-bordered table-sm">
            <thead class="thead-dark">
                <tr>
                    <th colspan="2" class="text-center">Account Information</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-right font-weight-bold" style="width: 30%;">
                        <label class="col-form-label">
                            @Html.DisplayNameFor(model => model.Username)
                        </label>
                    </td>
                    <td style="width: 70%;">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="text-right font-weight-bold">
                        <label class="col-form-label">
                            @Html.DisplayNameFor(model => model.Password)
                        </label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="text-right font-weight-bold">
                        <label class="col-form-label">
                            @Html.DisplayNameFor(model => model.Role)
                        </label>
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model.Role, new List<SelectListItem>
                        {
                            new SelectListItem { Value = "user", Text = "User" },
                            new SelectListItem { Value = "admin", Text = "Admin" }
                        }, "Choose role", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create
                        </button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
