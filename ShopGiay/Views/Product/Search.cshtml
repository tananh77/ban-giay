
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ShopGiay.Models.Product>

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("ProductDetails", "Product", new { productId = product.ProductId })" class="card-link">
                    <div class="card">
                        <img src="~/Public/image/@product.Image" class="card-img-top" alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price: $@product.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
          }
          else
          {
            <p>No results found.</p>
        }


